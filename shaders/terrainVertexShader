#version 400 core

in vec3 position;
in vec4 color;
in vec3 normal;

out vec4 passColor;
out vec3 passNormal;

uniform mat4 projectionMatrix;
uniform mat4 viewMatrix;
uniform mat4 modelMatrix;

void main(void) {
	vec4 worldPosition = modelMatrix * vec4(position, 1.0);
	
	gl_Position = projectionMatrix * viewMatrix * worldPosition;
	
	passColor = mix(color, vec4(1f, 0f, 0f, 1f), position.y / 10f);
	passNormal = normal;
}